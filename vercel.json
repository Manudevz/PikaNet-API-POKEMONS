{
  "version": 2,
  "builds": [
    {
      "src": "server/**",
      "use": "@vercel/node"
    },
    {
      "src": "client/dist/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ],
  "public": {
    "base": "/client/dist/public"
  }
}